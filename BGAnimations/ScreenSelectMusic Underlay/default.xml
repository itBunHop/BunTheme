<ActorFrame> <children>
	<!-- backdrop here -->
	<Layer
		Type="Quad"
		InitCommand="stretchto,SCREEN_CENTER_X-320,0,SCREEN_CENTER_X+320,SCREEN_HEIGHT;diffuse,#000000;diffusealpha,0.5"
	/>
	
		<!-- p1 things -->
	
	<!-- description -->
	<Layer
		Type="ActorFrame"
		Condition="GAMESTATE:IsPlayerEnabled(PLAYER_1)"
		InitCommand="y,SCREEN_CENTER_Y+67"
		OnCommand="%function(self) self:x(math.max(20,SCREEN_CENTER_X-406.666667)) end"
	><children>
		<Layer 
			Type="BitmapText"
			Condition="not GAMESTATE:IsCourseMode()"
			Font="_nunito Bold"
			Text="P1"
			InitCommand="x,-1;ShadowLength,0;horizalign,right;zoom,0.375"
		/>
		<Layer 
			Font="_nunito"
			Text="???"
			InitCommand="x,4;zoom,0.375;shadowlength,0;horizalign,left" 
			OnCommand="%function(self) self:maxwidth(Clamped_WideScale(730,750*1.333333)) end"
			SetCommand="%function(self)
				local steps = GAMESTATE:GetCurrentSteps(PLAYER_1)
				if steps then
					self:settext(steps:GetDescription())	
				else
					self:settext('')
				end
				
				self:diffuse(1,1,1,1) 
			end" 
			CurrentSongChangedMessageCommand="playcommand,Set" 
			CurrentStepsP1ChangedMessageCommand="playcommand,Set" 
		/>
	</children></Layer>
	
	<!-- pane display -->
	<Layer
		Type="ActorFrame"
		Condition="GAMESTATE:IsPlayerEnabled(PLAYER_1)"
		InitCommand="y,SCREEN_CENTER_Y+67+10"
		CurrentSongChangedMessageCommand="playcommand,Set" 
		CurrentStepsP1ChangedMessageCommand="playcommand,Set" 
	><children>
	
		<Layer File="panedisplay.xml" InitCommand="@'diffuse,'..PlayerColor(PLAYER_1)"/>
		<!-- more labels (problem is that inconsolata doesnt line up because line spacing -->
		<Layer
			Type="BitmapText"
			Font="_nunito Bold small"
			Text="???"
			InitCommand="zoom,0.55;diffuse,#000000;shadowlength,0;horizalign,left;vertalign,top;x,44+4;y,4;diffusealpha,1"
			SetCommand="%function(self)
				if GAMESTATE:IsCourseMode() then
				
				else
					local steps = GAMESTATE:GetCurrentSteps(0)
					if steps then
						local radar = steps:GetRadarValues()
						self:settext(radar:GetValue(5)..'\n'..radar:GetValue(7)..'\n'..radar:GetValue(6))
					else
						self:settext('')
					end
				end
			
			end"
		/>
		
		<Layer
			Type="BitmapText"
			Font="_nunito Bold small"
			Text="???"
			InitCommand="zoom,0.55;diffuse,#000000;shadowlength,0;horizalign,left;vertalign,top;x,144+4;y,4;diffusealpha,1"
			OnCommand="%function(self) self:addx(Clamped_WideScale(0,36)) end"
			SetCommand="%function(self)
				if GAMESTATE:IsCourseMode() then
				
				else
					local steps = GAMESTATE:GetCurrentSteps(0)
					if steps then
						local radar = steps:GetRadarValues()
						self:settext(radar:GetValue(8)..'\n'..radar:GetValue(10)..'\n'..radar:GetValue(9))
					else
						self:settext('')
					end
				end
			
			end"
		/>
		
		<!-- getting highscores that isnt using a notitg function is not fun -->
		<Layer
			
		/>
	
	</children></Layer>
	
