<ActorFrame> <children>
	<!-- backdrop here -->
	<Layer
		Type="Quad"
		InitCommand="stretchto,SCREEN_CENTER_X-320,0,SCREEN_CENTER_X+320,SCREEN_HEIGHT;diffuse,#000000;diffusealpha,0.5"
	/>
	
		<!-- p1 things -->
	
	<!-- description -->
	<Layer
		Type="ActorFrame"
		Condition="GAMESTATE:IsPlayerEnabled(PLAYER_1)"
		InitCommand="y,SCREEN_CENTER_Y+67"
		OnCommand="%function(self) self:x(math.max(20,SCREEN_CENTER_X-406.666667)) end"
	><children>
		<Layer 
			Type="BitmapText"
			Condition="not GAMESTATE:IsCourseMode()"
			Font="_nunito Bold"
			Text="P1"
			InitCommand="x,-1;ShadowLength,0;horizalign,right;zoom,0.375"
		/>
		<Layer 
			Font="_nunito"
			Text="???"
			InitCommand="x,4;zoom,0.375;shadowlength,0;horizalign,left" 
			OnCommand="%function(self) self:maxwidth(Clamped_WideScale(730,750*1.333333)) end"
			SetCommand="%function(self)
				local steps = GAMESTATE:GetCurrentSteps(PLAYER_1)
				if steps then
					self:settext(steps:GetDescription())	
				else
					self:settext('')
				end
				
				self:diffuse(1,1,1,1) 
			end" 
			CurrentSongChangedMessageCommand="playcommand,Set" 
			CurrentStepsP1ChangedMessageCommand="playcommand,Set" 
		/>
	</children></Layer>
	
	<!-- p2 things -->
	
	<!-- description -->
	<Layer
		Type="ActorFrame"
		Condition="GAMESTATE:IsPlayerEnabled(PLAYER_2)"
		InitCommand="y,SCREEN_CENTER_Y+67+84"
		OnCommand="%function(self) self:x(math.max(20,SCREEN_CENTER_X-406.666667)) end"
	><children>
		<Layer 
			Type="BitmapText"
			Condition="not GAMESTATE:IsCourseMode()"
			Font="_nunito Bold"
			Text="P2"
			InitCommand="x,-1;ShadowLength,0;horizalign,right;zoom,0.375"
		/>
		<Layer 
			Font="_nunito"
			Text="???" 
			InitCommand="x,4;zoom,0.375;shadowlength,0;horizalign,left"
			OnCommand="%function(self) self:maxwidth(Clamped_WideScale(730,750*1.333333)) end"
			SetCommand="%function(self)
				local steps = GAMESTATE:GetCurrentSteps(PLAYER_2)
				if steps then
					self:settext(steps:GetDescription())	
				else
					self:settext('')
				end
				
				self:diffuse(1,1,1,1) 
			end" 
			CurrentSongChangedMessageCommand="playcommand,Set" 
			CurrentStepsP2ChangedMessageCommand="playcommand,Set" 
		/>
	</children></Layer>

	<!-- quads underlay -->
	
	<!-- vertical (there is more in the overlay for wider screen) -->
	<Layer
		Type="Quad"
		InitCommand="stretchto,SCREEN_CENTER_X-14,0,SCREEN_CENTER_X-10,SCREEN_HEIGHT;diffuse,#FFFFFF"
	/>
	
	<!-- horizontal -->
	<Layer
		Type="Quad"
		InitCommand="stretchto,SCREEN_CENTER_X-426.666667,SCREEN_CENTER_Y-2,SCREEN_CENTER_X-10,SCREEN_CENTER_Y+2;y,SCREEN_CENTER_Y-204;diffuse,#FFFFFF"
	/>
	
	<Layer
		Type="Quad"
		InitCommand="stretchto,SCREEN_CENTER_X-426.666667,SCREEN_CENTER_Y-2,SCREEN_CENTER_X-10,SCREEN_CENTER_Y+2;y,SCREEN_CENTER_Y-41;diffuse,#FFFFFF"
	/>
	
	<Layer
		Type="Quad"
		InitCommand="stretchto,SCREEN_CENTER_X-426.666667,SCREEN_CENTER_Y-2,SCREEN_CENTER_X-10,SCREEN_CENTER_Y+2;y,SCREEN_CENTER_Y+56;diffuse,#FFFFFF"
	/>
</children> </ActorFrame>

