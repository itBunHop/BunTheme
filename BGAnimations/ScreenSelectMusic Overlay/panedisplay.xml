<ActorFrame><children>
	
	<!-- stretch to about the width needed -->
	<Layer
		Type="Quad"
		InitCommand="%function(self) self:stretchto(math.max(0,SCREEN_CENTER_X-426.666666),0,SCREEN_CENTER_X-14,50) end"
	/>
	
	<!-- labels (crying) -->
	<Layer
		Type="BitmapText"
		Font="_nunito Bold small"
		Text="Steps::Holds::Jumps"
		InitCommand="zoom,0.55;glow,#000000C9;shadowlength,0;horizalign,right;vertalign,top;x,44;y,4"
	/>
	
	<Layer
		Type="BitmapText"
		Font="_nunito Bold small"
		Text="Mines::Rolls::Hands"
		InitCommand="zoom,0.55;glow,#000000C9;shadowlength,0;horizalign,right;vertalign,top;x,144;y,4"
		OnCommand="%function(self) self:addx(Clamped_WideScale(0,36)) end"
	/>
</children></ActorFrame>